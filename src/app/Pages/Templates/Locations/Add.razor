@page "/templates/locations/add"
@using Microsoft.Extensions.Configuration
@using CampaignManager.App.Components.Forms
@using CampaignManager.Models

@inject IConfiguration Configuration
@inject HttpClient http
@inject IJSRuntime js

<h1>Location template - Add</h1>

<LocationForm Location="location" Objects="@objects" OnValidSubmit="@OnValidSubmit"></LocationForm>

@code
{ 
    [Parameter]
    public Guid Id { get; set; }
    [Parameter]
    public Guid CampaignId { get; set; }

    private List<Models.Object> objects = new List<Models.Object>();
    private Location location = new Location
    {
        Id = Guid.NewGuid().ToString(),
        CampaignId = Guid.Empty.ToString(),
        Coordinates = new Coordinates(),
        Services = new List<Service>(),
        Items = new List<Item>()
    };

    protected override async Task OnInitializedAsync()
    {
        var url = $"{Configuration["ApiUrl"]}/Objects?campaignId={Guid.Empty}";
        objects = (await http.GetFromJsonAsync<IEnumerable<Models.Object>>(url)).ToList();
    }

    private async Task OnValidSubmit()
    {
        var url = $"{Configuration["ApiUrl"]}/Locations?campaignId={CampaignId}";
        await http.PostAsJsonAsync<Location>(url, location);
        await js.InvokeVoidAsync("alert", $"Added Successfully!");
    }
}