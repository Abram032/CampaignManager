@page "/templates/objects"
@using CampaignManager.App.Components.Lists
@using CampaignManager.Models
@using Microsoft.Extensions.Configuration
@using CampaignManager.App.Components.Forms

@inject IConfiguration Configuration
@inject HttpClient http

<h1>Template objects</h1>

<a class="btn btn-success mb-3 mt-3" type="button" href="/templates/objects/add"><span class="fas fa-plus mr-2"></span>Add</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th>Name</th>
            <th>Category</th>
            <th>Subcategory</th>
            <th>Cost</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < objects.Count; i++)
        {
            int index = i;
            <tr>
                <th scope="row">@(index + 1)</th>
                <td>@objects[index].Name</td>
                <td>@objects[index].Category</td>
                <td>@objects[index].Subcategory</td>
                <td>@objects[index].Cost</td>
                <td>
                    <a class="btn btn-warning" type="button" href="/templates/objects/edit/@objects[index].Id">
                        <span class="fas fa-edit"></span>
                    </a>
                </td>
                <td>
                    <button class="btn btn-danger" type="button" @onclick="(() => DeleteAsync(objects[index].Id, objects[index].CampaignId))">
                        <span class="fas fa-trash"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code
{
    private List<Models.Object> objects = new List<Models.Object>();

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine(Configuration["ApiUrl"]);
        var url = $"{Configuration["ApiUrl"]}/Objects?campaignId={Guid.Empty}";
        objects = (await http.GetFromJsonAsync<IEnumerable<Models.Object>>(url)).ToList();
    }

    private async Task DeleteAsync(string id, string campaignId)
    {
        var url = $"{Configuration["ApiUrl"]}/Object?campaignId={campaignId}&id={id}";
        await http.DeleteAsync(url);
        await OnInitializedAsync();
    }
}
